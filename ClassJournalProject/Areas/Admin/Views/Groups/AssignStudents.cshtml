@model IEnumerable<ClassJournalProject.Models.Student>

@{
    ViewData["Title"] = "Assigning students";
}

<h1>Assign students to @ViewBag.Group.Specialty.Name-@ViewBag.Group.Year-@ViewBag.Group.Number group</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignStudents" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input type="hidden" name="groupId" value="@ViewBag.Group.Id" />

            @foreach (var item in Model) {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="student-@item.Id" value="@item.Id" name="students">
                    <label class="form-check-label" for="student-@item.Id">@item.FullName</label>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Assign students" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GroupsList">Back to groups list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


