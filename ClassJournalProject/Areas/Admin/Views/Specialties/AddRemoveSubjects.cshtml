@model Dictionary<string, List<ClassJournalProject.Models.Subject>>

@{
    ViewData["Title"] = "Adding subjects";
}

<h1>Adding subjects to the specialty @ViewBag.Specialty.Item1 @ViewBag.Specialty.Item2</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRemoveSubjects">

            <input type="hidden" name="specialtyId" value="@ViewBag.Specialty.Item1" />

            <h5>Add new subjects</h5>

            <div class="form-group">

                @foreach (var subject in Model["nonExistingSubjects"]) {
                    <input class="form-check-input" id="subject-@subject.Id" type="checkbox" name="subjectsToAdd" value="@subject.Id" />
                    <label class="form-check-label" for="subject-@subject.Id">@subject.Name</label> <br>
                }

            </div>

            <h5>Remove existing subjects</h5>

            <div class="form-group">

                @foreach (var subject in Model["existingSubjects"]) {
                    <input class="form-check-input" id="subject-@subject.Id" type="checkbox" name="subjectsToRemove" value="@subject.Id" />
                    <label class="form-check-label" for="subject-@subject.Id">@subject.Name</label> <br>
                }

            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SubjectsList">Back to subject list</a> | 
    <a asp-action="SpecialtiesList">Back to specialties list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}